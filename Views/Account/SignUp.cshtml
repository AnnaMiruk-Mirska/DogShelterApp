@model TestApp.Models.SignUpModel

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

/br
<h2>Utwórz konto</h2>

@using (Html.BeginForm()) 
{
    //@Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        
        <div class="form-group">
            <label style="position:relative; left:-860px; ">Login: </label>
            <div class="col-md-10" style="position:relative; left:150px;">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="position:relative; left:-860px;">E-mail: </label>
            <div class="col-md-10" style="position:relative; left:150px;">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="position:relative; left:-860px;">Hasło: </label>
            <div class="col-md-10" style="position:relative; left:150px;">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
   </div>
}

<div>
    @Html.ActionLink("Powrót", "Index")
</div>
